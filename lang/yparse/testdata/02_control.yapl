// Test 02: Control flow statements

func int16 TestIf(int16 n) {
    var int16 result;

    if (n > 0) {
        result = 1;
    }

    if (n < 0) {
        result = -1;
    } else {
        result = 0;
    }

    if (n == 1) {
        result = 10;
    } else {
        if (n == 2) {
            result = 20;
        } else {
            result = 30;
        }
    }

    return result;
}

func int16 TestWhile(int16 n) {
    var int16 sum;
    var int16 i;

    sum = 0;
    i = 0;
    while (i < n) {
        sum = sum + i;
        i = i + 1;
    }

    return sum;
}

func int16 TestFor(int16 n) {
    var int16 sum;
    var int16 i;

    sum = 0;
    for (i = 0; i < n; i = i + 1) {
        sum = sum + i;
    }

    // Empty clauses
    i = 0;
    for (; i < 10; ) {
        i = i + 1;
    }

    return sum;
}

func void TestBrkCont() {
    var int16 i;

    i = 0;
    while (i < 100) {
        i = i + 1;
        if (i == 50) {
            break;
        }
        if (i == 25) {
            continue;
        }
    }

    return;
}
