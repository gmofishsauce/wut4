; Test program for BRK instruction
; This program sets up some register values and then executes BRK

start:
	; Load some values into registers to make the dump interesting
	lui r1, 0x12      ; Load 0x12 << 6 into R1
	adi r2, r0, 0x42  ; Load 0x42 into R2
	adi r3, r0, 0x55  ; Load 0x55 into R3
	adi r4, r0, 0x3F  ; Load 0x3F into R4
	adi r4, r4, 0x02  ; Add 2 - should set carry
	adi r5, r0, 0x11  ; Load 0x11 into R5

	; Execute BRK to dump registers
	brk

	; Continue execution after BRK
	adi r5, r5, 0x10  ; Update R5

	; Execute BRK again to see updated state
	brk

	; Halt
	hlt
